{% include 'incl/header.twig' %}

<body>
    {% include 'incl/nav.twig' %}
        
        {% if current_page.title=="Technologies" %}
        <div class="main" role="main">
        <div class="tech-container">
            {{ content }}
            </div>
        {% else %}
        <div class="two-column-main" role="main">
        <div class="tech">
            {{ content }}
        </div>
        <div class="side-column">
            <p>Technologies</p>
            <ul>
                {% for page in pages("technology") if page.title and not page.hidden %}
                    {% if page.id==current_page.id %} 
                    <li class="active-tech">{{ page.title }}</li>
                    {% else %}
                    <li><a href="{{ page.url }}">{{ page.title }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
    
    {% include 'incl/footer.twig' %}
</body>

</html>
